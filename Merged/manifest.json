{
  "description": "Add functionalities to r/anime",
  "manifest_version": 3,
  "name": "r/anime Enhanced 2.0",
  "version": "3.2.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://graphql.anilist.co/*"
  ],
  "homepage_url": "https://github.com/r-anime/ranime-Extension",
  "icons": {
    "16": "icons/Snoo_square_icon_16.png",
    "32": "icons/Snoo_square_icon_32.png",
    "48": "icons/Snoo_square_icon_48.png",
    "64": "icons/Snoo_square_icon_64.png",
    "128": "icons/Snoo_square_icon_128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/Snoo_square_icon_16.png",
      "32": "icons/Snoo_square_icon_32.png",
      "48": "icons/Snoo_square_icon_48.png",
      "64": "icons/Snoo_square_icon_64.png",
      "128": "icons/Snoo_square_icon_128.png"
    },
    "default_title": "r/anime Enhanced 2.0",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/r/anime/*",
        "*://*.reddit.com/r/manga/*",
        "*://*.reddit.com/r/AnimeImpressions/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "enhance.js"
      ],
      "type": "module",
      "css": [
        "enhance.css",
        "options.css"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ce9bc4ef-8eec-41b1-af5f-714dfd556a74}"
    }
  }
}
